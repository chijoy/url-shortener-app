<h1>Your links</h1>

<table>
  <tr>
    <th>Slug</th>
    <th>Target URL</th>
    <th>Created At</th>
  </tr>
  <% @links.each do |link| %>
    <tr>
      <td><%= link.slug %></td>
      <td><%= link.target_url %></td>
      <td><%= link.created_at %></td>
    </tr>
  <% end %>
<table>

<%= link_to 'New', "/links/new" %>
<%= link_to 'Edit', "/links/#{@link.id}/edit" %>
<%= link_to 'Show', "/links/#{@link.id}/show" %>
<%= link_to 'Delete', "/link/#{@link.id}", method: :delete %>